# ==================================================
# Firebase Configuration (Required for Authentication)
# ==================================================
# Get these values from Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app > SDK setup and configuration

NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSy...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ==================================================
# Google Analytics Configuration
# ==================================================
# Replace with your actual GA4 Measurement ID from https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Contact Form - Owner Email Addresses (comma-separated for multiple)
# お問い合わせ通知を受け取るメールアドレス（カンマ区切りで複数設定可能）
CONTACT_EMAILS=owner1@example.com,owner2@example.com

# Resend API Key for sending emails
# https://resend.com/
RESEND_API_KEY=re_xxxxxxxxxx

# reCAPTCHA Secret Key (optional)
# https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=

# Upstash Redis (optional, for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Search Engine Verification (optional)
# Get from: https://www.bing.com/webmasters
NEXT_PUBLIC_BING_SITE_VERIFICATION=
# Get from: https://webmaster.yandex.com
NEXT_PUBLIC_YANDEX_VERIFICATION=
# Get from: https://search.google.com/search-console (if using meta tag method)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Sentry Error Monitoring (optional)
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
